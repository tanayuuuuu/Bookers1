<h1>Books</h1>

<% @books.each do |book| %>
    <h2>title</h2>
    <span>
        <%= link_to book.title, book_path(book.id) %>
    </span>
    <h2>body</h2>
    <span><%= book.body %></span>
<% end %>


<h2>NewBook</h2>

<%= form_with model: @book do |f| %>

    <h4>title</h4>
    <%= f.text_field :title %>

    <h4>body</h4>
    <%= f.text_area :body %>

    <%= f.submit "投稿" %>
<% end %>